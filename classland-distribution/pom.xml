<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.revapi.classland</groupId>
        <artifactId>classland-parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>classland</artifactId>

    <name>Classland :: Distribution</name>

    <properties>
        <maven.install.skip>false</maven.install.skip>
    </properties>

    <dependencies>
        <!-- replace this dependency with the latest version of java classland supports. Currently it's 15. -->
        <dependency>
            <groupId>org.revapi.classland</groupId>
            <artifactId>classland-java15</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.revapi.classland</groupId>
            <artifactId>classland-module</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.2</version>
                <executions>
                    <execution>
                        <id>module-info</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeGroupIds>org.revapi.classland</includeGroupIds>
                            <includeArtifactIds>classland-module</includeArtifactIds>
                            <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                            <excludes>**/Dummy.class</excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>8</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeGroupIds>org.revapi.classland</includeGroupIds>
                            <includeArtifactIds>classland-java8</includeArtifactIds>
                            <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>9</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeGroupIds>org.revapi.classland</includeGroupIds>
                            <includeArtifactIds>classland-java9</includeArtifactIds>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/9</outputDirectory>
                            <excludes>/META-INF/**</excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>15</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeGroupIds>org.revapi.classland</includeGroupIds>
                            <includeArtifactIds>classland-java15</includeArtifactIds>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/15</outputDirectory>
                            <excludes>/META-INF/**</excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Name>classland</Name>
                            <Specification-Title>Classland</Specification-Title>
                            <!--suppress MavenModelInspection -->
                            <Specification-Version>
                                ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}
                            </Specification-Version>
                            <Implementation-Title>Classland</Implementation-Title>
                            <Implementation-Version>${project.version}</Implementation-Version>
                            <Multi-Release>true</Multi-Release>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
